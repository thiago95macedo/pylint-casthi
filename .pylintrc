[MASTER]
# Carregar plugin pylint-casthi
load-plugins=pylint_casthi

# Desabilitar score (não mostrar pontuação)
score=n

# Diretórios a ignorar
ignore=CVS,.git,__pycache__,.tox,.eggs,*.egg,build,dist

# Arquivos a ignorar
ignore-paths=^.*/tests/.*$

# Configurações de análise
jobs=1
persistent=yes
suggestion-mode=yes

[MESSAGES CONTROL]
# Habilitar verificações CasThi e algumas básicas importantes
enable=casthilint,
        missing-module-docstring,
        missing-class-docstring,
        missing-function-docstring,
        line-too-long,
        trailing-newlines,
        missing-final-newline,
        trailing-whitespace

# Desabilitar verificações desnecessárias ou muito restritivas
disable=all,
        too-few-public-methods,
        too-many-arguments,
        too-many-locals,
        too-many-branches,
        too-many-statements,
        too-many-instance-attributes,
        too-many-public-methods,
        too-many-ancestors,
        too-many-return-statements,
        too-many-boolean-expressions,
        too-many-nested-blocks,
        too-many-function-args,
        too-many-star-expressions,
        too-many-format-args,
        unused-argument,
        protected-access,
        attribute-defined-outside-init,
        locally-disabled,
        suppressed-message,
        fixme,
        import-error,
        c-extension-no-member,
        logging-too-many-args,
        inconsistent-return-statements,
        consider-using-f-string,
        consider-using-dict-comprehension,
        consider-using-set-comprehension,
        consider-using-generator,
        unnecessary-comprehension,
        use-list-literal,
        use-dict-literal,
        consider-using-min-builtin,
        consider-using-max-builtin,
        consider-using-enumerate,
        consider-using-join,
        consider-using-sys-exit,
        consider-using-with

[REPORTS]
# Formato das mensagens
msg-template={path}:{line}: [{msg_id}({symbol}), {obj}] {msg}

# Formato de saída colorido
output-format=colorized

# Desabilitar relatórios detalhados
reports=no

[SIMILARITIES]
# Configurações de código duplicado
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no

[DESIGN]
# Limites de complexidade
max-args=7
max-locals=20
max-returns=6
max-branches=15
max-statements=60
max-parents=7
max-attributes=12
max-public-methods=25
max-bool-expr=6

[BASIC]
# Nomes válidos para variáveis
good-names=i,j,k,ex,Run,_,id,db,qs,obj,env,ctx,vals,rec,res,self,cls

# Nomes de variáveis a evitar
bad-names=foo,bar,baz,toto,tutu,tata

# Configurações de docstring
docstring-min-length=-1

[FORMAT]
# Configurações de formatação
max-line-length=120
indent-string='    '
indent-after-paren=4
single-line-if-stmt=no

[LOGGING]
# Configurações de logging
logging-modules=logging

[VARIABLES]
# Configurações de variáveis
init-import=no
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_
callbacks=cb_,
          _cb
redefining-builtins-modules=six.moves,past.builtins,future.builtins,builtins,io

[TYPECHECK]
# Configurações de verificação de tipos
ignored-modules=
ignored-classes=optparse.Values,thread._local,_thread._local
generated-members=
contextmanager-decorators=contextlib.contextmanager

[CLASSES]
# Configurações de classes
defining-attr-methods=__init__,__new__,setUp,__post_init__
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=mcs
exclude-protected=_asdict,_fields,_replace,_source,_make

[IMPORTS]
# Configurações de imports
deprecated-modules=
import-graph=
ext-import-graph=
int-import-graph=
known-third-party=enchant
known-standard-library=

[EXCEPTIONS]
# Configurações de exceções
overgeneral-exceptions=builtins.Exception